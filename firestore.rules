rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Public martyrs collection - read-only for website visitors
    match /martyrs/{martyrId} {
      // Anyone can read approved martyrs (for public gallery)
      allow read: if resource.data.status == 'approved';
      
      // Only allow writes from admin domains (basic protection)
      // Note: This is client-side protection only, not true security
      allow write: if request.time != null; // Basic validation
    }
    
    // Pending martyrs collection - restricted access
    match /pendingMartyrs/{martyrId} {
      // Allow public submissions (new pending martyrs)
      allow create: if request.resource.data.status == 'pending' &&
                   request.resource.data.submittedAt != null;
      
      // Admin operations (read, update, delete)
      // Note: In production, implement proper Firebase Auth
      allow read, update, delete: if request.time != null; // Basic validation
    }
    
    // Test collection for connectivity tests
    match /test/{testId} {
      allow read, write: if request.time != null;
    }
    
    // Block all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
